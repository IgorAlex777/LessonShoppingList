<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fon_layout">

    <TextView
        android:id="@+id/tvTitleDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/fon_my"
        android:gravity="center"
        android:padding="10dp"
        android:text="удалить товар?"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/caldroid_transparent"
        app:layout_constraintStart_toStartOf="@+id/tvTitleDelete"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleDelete"
        app:srcCompat="@drawable/no" />

    <ImageButton
        android:id="@+id/ibYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/caldroid_transparent"
        app:layout_constraintEnd_toEndOf="@+id/tvTitleDelete"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleDelete"
        app:srcCompat="@drawable/yes" />
</androidx.constraintlayout.widget.ConstraintLayout>